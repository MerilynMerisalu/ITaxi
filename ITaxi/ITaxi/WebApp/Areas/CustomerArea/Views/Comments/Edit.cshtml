@using App.Resources.Areas.App.Domain.CustomerArea
@using Base.Resources
@model WebApp.Areas.CustomerArea.ViewModels.EditCommentViewModel

@{
    ViewData["Title"] = Common.Edit;
}

<h1>@Common.Edit</h1>

<h4>@Comment.CommentName</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Drive" class="control-label"></label>
                <input asp-for="DriveTimeAndDriver" class="form-control" 
                       disabled="disabled">
                <span asp-validation-for="DriveId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StarRating" class="control-label"></label>
                <ejs-rating ejs-for="StarRating" value="Model.StarRating.Value"></ejs-rating>
                <span asp-validation-for="StarRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentText" class="control-label"></label>
                <textarea asp-for="CommentText" class="form-control"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <input type="submit" value="@Common.Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Common.BackToList</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}