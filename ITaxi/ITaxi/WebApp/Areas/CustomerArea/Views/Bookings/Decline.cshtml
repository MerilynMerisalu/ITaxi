@using App.Resources.Areas.App.Domain.CustomerArea
@using Base.Resources
@model WebApp.Areas.CustomerArea.ViewModels.DeclineBookingViewModel
@{
    ViewData["Title"] = Booking.Decline;
}

<h1>@Booking.Decline</h1>

<h3>@Booking.AreYouSureYouWantToDeclineThis</h3>
<div>
    <h4>@Booking.BookingName</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickUpDateAndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickUpDateAndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickupAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickupAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DestinationAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DestinationAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfPassengers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfPassengers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HasAnAssistant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HasAnAssistant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionalInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusOfBooking)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusOfBooking)
        </dd>

    </dl>
    <form asp-action="Decline">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="@Booking.Decline" class="btn btn-danger"/> |
        <a asp-action="Index">@Common.BackToList</a>
    </form>
</div>