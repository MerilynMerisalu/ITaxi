@using Base.Resources.Identity.Pages.Account.Manage
@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string) parentLayout!;
    }
    else
    {
        Layout = "_Layout.cshtml";
    }
}

<h1>@_Layout.ManageYourAccount</h1>

<div>
    <h2>@_Layout.ChangeYourAccountSettings</h2>
    <hr/>
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav"/>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", false)
}