@page
@model LoginModel
@using Base.Resources.Identity.Pages.Account

@{
    ViewData["Title"] = Login.LogIn;
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>@Login.UseLocalAccount</h2>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input id="passwdInput" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <img style="position:absolute;top:21px; right:15px" id="svgId"onclick="showPassword()" src="~/Images/Icons/eye.svg"/>

                </div>

                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                        @Login.LogIn
                    </button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">
                            @Login.ForgotPassword
                        </a>
                    </p>

                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                            @Login.ResendEmail
                        </a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>@Login.LoginThirdParty</h3>
            <hr/>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            @Login.NoThirdParty
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                            @if (Model?.ExternalLogins != null)
                            {
                                foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name">@provider.DisplayName</button>
                                }
                            }

                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        function showPassword() {
            const icon = document.querySelector("#svgId");
            let x = document.getElementById("passwdInput");
            if (x.type == "password") {
                x.type = "text";
                icon.addEventListener('click', () => {
                    icon.src = "\\Images\\Icons\\eye-closed.svg"; 
                }
            )}
            else {
                x.type = "password";
                icon.addEventListener('click', () => {
                    icon.src = "\\Images\\Icons\\eye.svg";
                    
                })
            }
        }       
        
    </script>

}