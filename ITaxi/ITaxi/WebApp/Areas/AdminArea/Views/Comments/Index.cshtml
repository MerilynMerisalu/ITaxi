@using Base.Resources
@using Syncfusion.EJ2.Inputs
@using Syncfusion.EJ2.Layouts


@model IEnumerable<App.BLL.DTO.AdminArea.CommentDTO>

@{
    ViewData["Title"] = Common.Index;
}

<h1>@Common.Index</h1>

<p>
    <a asp-action="Create">@Common.CreateNew</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DriveCustomerStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DriverName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentText)
        </th>
        
            <th>
                @Html.DisplayNameFor(model => model.StarRating)
            </th>
        
        
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </th>
        
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriveCustomerStr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CommentText)
            </td>
            @if (item.StarRating > 0)
            {
                <td>
                    <ejs-rating id="rating" readOnly="true"
                                value="item.StarRating.Value"></ejs-rating>
                </td>
            }
            else
            {
                <td></td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Common.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Common.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Common.Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>