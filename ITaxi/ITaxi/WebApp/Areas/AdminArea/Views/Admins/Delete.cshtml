@using Base.Resources
@model WebApp.Areas.AdminArea.ViewModels.DetailsDeleteAdminViewModel
@using App.Resources.Areas.App.Domain.AdminArea

@{
    ViewData["Title"] = Common.Delete;
}

<h1>@Common.Delete</h1>

<h3>@Common.AreYouSureYouWantToDeleteThis</h3>
<div>
    <h4>@Admin.Administrator</h4>
    <hr />
    <dl class="row">
        <partial name="AdminArea/PartialViews/_DetailsDeleteAdmin" model="Model"/>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@Common.Delete class="btn btn-danger" /> |
        <a asp-action="Index">@Common.BackToList</a>
    </form>
</div>
