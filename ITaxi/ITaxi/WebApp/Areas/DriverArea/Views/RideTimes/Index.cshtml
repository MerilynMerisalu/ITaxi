@using Base.Resources
@model IEnumerable<App.BLL.DTO.AdminArea.RideTimeDTO?>

@{
    ViewData["Title"] = Common.Index;
}

<h1>@Common.Index</h1>

<p>
    <a asp-action="Create">@Common.CreateNew</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model!.Schedule)
        </th>
        <th>
            @Html.DisplayNameFor(model => model!.RideDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model!.IsTaken)
        </th>
        <th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item!.Schedule!.ShiftDurationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.RideDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.IsTaken)
            </td>


            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">@Common.Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item!.Id">@Common.Details</a> |
                @if (item!.IsTaken)
                {
                    <a hidden="hidden" asp-action="Delete" asp-route-id="@item.Id">@Common.Delete</a>
                }
                else
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">@Common.Delete</a>
                }
                
            </td>
        </tr>
    }
    </tbody>
</table>