@model WebApp.Areas.AdminArea.ViewModels.CreateEditRideTimeViewModel

<div class="form-group">
    <label asp-for="ScheduleId" class="control-label"></label>
    <select asp-for="ScheduleId" class="form-control" asp-items="Model.Schedules">
        <option>Please Select</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="RideDateTime" class="control-label"></label>
    <select asp-for="RideDateTime" class="form-control" asp-items="Model.RideTimes">
        <option>Please Select</option>
    </select>
    <span asp-validation-for="RideDateTime" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="IsTaken" /> @Html.DisplayNameFor(model => model.IsTaken)
    </label>
</div>