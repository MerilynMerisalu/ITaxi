@model WebApp.Areas.AdminArea.ViewModels.CreateEditCityViewModel

<div class="form-group">
    <label asp-for="CountyId" class="control-label"></label>
    <select asp-for="CountyId"  class="form-control" asp-items="Model.Counties">
        <option value="">@Base.Resources.Common.PleaseSelect</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="CityName" class="control-label"></label>
    <input asp-for="CityName" class="form-control" />
    <span asp-validation-for="CityName" class="text-danger"></span>
</div>

